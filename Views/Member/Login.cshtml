@model LoginViewModel
@{
	ViewData["Title"] = "Login";
}

<h1>Log in to the website</h1>

<form method="post">
	<div class="text-danger" asp-validation-summary="All"></div>
	<div class="mb-3">
		<label class="form-label"   asp-for="UsernameOrEmail">Username Or Email</label>
		<input class="form-control" placeholder="Username Or Email" asp-for="UsernameOrEmail" />
		<span  class="text-danger"  asp-validation-for="UsernameOrEmail"></span>
	</div>
	<div class="mb-3">
		<label class="form-label"   asp-for="Password"></label>
		<input class="form-control" placeholder="Password" asp-for="Password" type="password" />
		<span  class="text-danger"  asp-validation-for="Password"></span>
	</div>

	<input type="submit" class="btn btn-primary" value="Login" />
</form>

<div>
	<a asp-controller="Home" asp-action="Index">Back to Home</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}