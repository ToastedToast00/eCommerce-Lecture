@model IEnumerable<Product>
@{
	ViewData["Title"] = "Product Listings";
}

<h2>Product Listings</h2>

<a asp-action="Create" asp-controller="Product" class="btn btn-secondary">
	Create Product
</a>

@if (TempData["Message"] != null)
{
	<div class="alert alert-success alert-dismissible fade show" role="alert">
		@TempData["Message"]
		<button type="button" class="btn-close" data-bs-dismiss="alert"
				aria-label="Close"></button>
	</div>
}

@if (Model == null || Model.Count() == 0) //This works, the lecture doesn't contain this, idk why it works and not having the null statement breaks it but whatever.
{
	<p>No products are currently found</p>
}
else
{
<table class="table table-striped">
	<thead>
		<tr>
			<th>@Html.DisplayNameFor(m => m.Title)</th>
			<th>@Html.DisplayNameFor(m => m.Price)</th>
			<th>Links</th>
		</tr>
	</thead>
	<tbody>
		@foreach (Product product in Model)
		{
			<tr>
				<td>@Html.DisplayFor(p => product.Title)</td>
				<td>@Html.DisplayFor(p => product.Price)</td>
				<td>
					<a asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductId">Update</a>
					-- 
					Delete
				</td>
			</tr>
		}
	</tbody>
</table>
}
